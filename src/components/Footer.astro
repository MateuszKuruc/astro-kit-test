---
import client from "@data/client.json";
---

<!-- ============================================ --><!--                   Footer                     --><!-- ============================================ -->
<footer id="footer">
  <div class="container">
    <div class="left-section">
      <a class="logo" href="/"
        ><img
          loading="lazy"
          decoding="async"
          src="/assets/svgs/logo-white.svg"
          alt="logo"
          width="264"
          height="78"
        /></a
      >
      <p>
        Dojebana firma i super uslugi - tylko u nas! Sprawdz to gowno
      </p>
    </div>
    <div class="right-section">
      <div class="lists">
        <ul>
          <li>
            <h2>Informacje</h2>
          </li>
          <li>
            <a href="/">Strona główna</a>
          </li>
          <li>
            <a href="/about">O nas</a>
          </li>
          <li>
            <a href="/projects">Portfolio</a>
          </li>
          <li>
            <a href="/testimonials">Recenzje</a>
          </li>
          <li>
            <a href="/contact">Kontakt</a>
          </li>
        </ul>
        <ul>
          <li>
            <h2>Usługi</h2>
          </li>
          <li>Kampanie reklamowe</li>
          <li>Tworzenie stron </li>
          <li>Obsługa social media</li>
          <li>Budowa sklepu online</li>
          <li>SEO</li>
        </ul>
        <ul>
          <li>
            <h2>Kontakt</h2>
          </li>
          <li>
            <a href="/contact">
              {client.address.lineOne}<br />
              <!-- {client.address.lineTwo}<br /> -->
              {client.address.city}
              {client.address.state}
              {client.address.zip}
            </a>
          </li>
          <li>
            <a href={`tel:${client.phoneForTel}`}>
              T:
              {client.phoneFormatted}
            </a>
          </li>
          <li>
            <a href={`mailto:${client.email}`}>Kontakt mailowy</a>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <div class="credit">
    <span>Designed and Hand Coded by</span>
    <a href="/" target="_blank" rel="noopener"> MATI </a>
    <span class="copyright"> Copyright 2023 - Present</span>
  </div>
</footer>
